<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

	<servlet-mapping>
		<servlet-name>javax.ws.rs.core.Application</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>org.fiteagle.proprietary.rest.AuthenticationFilter</filter-class>
	</filter>
	<filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/api/user/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/api/class/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/api/node/*</url-pattern>
  </filter-mapping>
  
	<filter>
    <filter-name>UserAuthorizationFilter</filter-name>
    <filter-class>org.fiteagle.proprietary.rest.UserAuthorizationFilter</filter-class>
  </filter>
	<filter-mapping>
    <filter-name>UserAuthorizationFilter</filter-name>
    <url-pattern>/api/user/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>ClassAuthorizationFilter</filter-name>
    <filter-class>org.fiteagle.proprietary.rest.ClassAuthorizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ClassAuthorizationFilter</filter-name>
    <url-pattern>/api/class/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>NodeAuthorizationFilter</filter-name>
    <filter-class>org.fiteagle.proprietary.rest.NodeAuthorizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>NodeAuthorizationFilter</filter-name>
    <url-pattern>/api/node/*</url-pattern>
  </filter-mapping>
  
  
</web-app>